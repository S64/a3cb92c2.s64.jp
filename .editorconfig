root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true

[.node-version]
insert_final_newline = false

[*.mk]
indent_style = tab
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.mdx]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
